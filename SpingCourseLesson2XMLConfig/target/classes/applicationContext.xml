<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="rockBean"
          class="com.amarchuk.springcourse.RockMusic">
    </bean>
    <bean id="popBean"
          class="com.amarchuk.springcourse.PopMusic">
    </bean>
    <bean id="classicBean"
          class="com.amarchuk.springcourse.ClassicalMusic"
          init-method="doMyInit"
          destroy-method="doMyDestroy">
    </bean>
    <bean id="funkBean"
          class="com.amarchuk.springcourse.FunkMusic"
          factory-method="getFunkMusic">
    </bean>

<!--    property name=mussic, because of the name of method '(set)Music'-->
<!--    Testing 1st option of configuration Spring Bean...-->
    <bean id="musicPlayerBean"
          class="com.amarchuk.springcourse.MusicPlayer"
          scope="prototype">
        <property name="name" value="Some name"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

    <bean id="playerBean"
          class="com.amarchuk.springcourse.MusicPlayer">
        <property name="name" value="Some name"/>
        <!--        <property name="volume" value="50"/>-->
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>



<!--    Testing 2ndd option of configuration Spring Bean...-->
    <bean id="musicListBean"
          class="com.amarchuk.springcourse.MusicPlayer">
        <property name="listMusic">
            <list value-type="com.amarchuk.springcourse.Music">
                <ref bean="popBean"/>
                <ref bean="rockBean"/>
                <ref bean="classicBean"/>
            </list>
        </property>
    </bean>


</beans>